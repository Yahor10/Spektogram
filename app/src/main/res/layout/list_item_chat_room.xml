<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:minHeight="70dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_user_photo"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:scaleType="centerCrop"
        android:src="@drawable/user_photo" />

    <FrameLayout
        android:id="@+id/frame_chat_about"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/gradient_blue_to_blue"
        android:paddingLeft="10dp">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="left|center_vertical"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/txt_chat_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="true"
                android:singleLine="true"
                android:text="Room name"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@android:color/white"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/txt_last_message"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_chat_name"
                android:enabled="true"

                android:singleLine="true"
                android:text="Hi Spectr"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/txt_chat_last_message_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/txt_chat_name"

                android:text="05:23 PM"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/txt_chat_not_saw_count_message"
                android:layout_width="25sp"
                android:layout_height="25sp"
                android:layout_alignBottom="@+id/txt_last_message"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/ic_chat_notify"
                android:gravity="center"
                android:text="2"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#4433ff" />

        </RelativeLayout>

    </FrameLayout>

</LinearLayout>